{
  "private": true,
  "name": "pacopanda-drawing-stats",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "prepare": "husky install",
    "postinstall": "cd client && nuxt prepare"
  },
  "workspaces": [
    "client",
    "utils/configs/prettier"
  ],
  "lint-staged": {
    "client/**": "yarn prettier --write .",
    "python/**/!(*cache).json": "yarn prettier --write .",
    "*.md": "yarn prettier --write ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo."
    }
  },
  "devDependencies": {
    "@kuro-utils/prettier": "*",
    "@turbo/gen": "latest",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.1",
    "prettier": "^3.0.3",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
