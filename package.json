{
  "name": "pandapaco-drawing-stats",
  "license": "GPL-2.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "shared/*",
    "scripts/puppeteer"
  ],
  "lint-staged": {
    "apps/**": "yarn prettier:write",
    "shared/**": "yarn prettier:write"
  },
  "scripts": {
    "cleanup": "node ./scripts/cleanBloat.js && yarn",
    "dev:web": "turbo dev --filter=website",
    "build:web": "turbo build --filter=website",
    "dev:admin": "turbo dev --filter=admin-vite",
    "build:admin": "turbo build --filter=admin-vite",
    "dev": "turbo dev",
    "build": "turbo build",
    "puppeteer": "yarn workspace @pds/puppeteer start",
    "postinstall": "cd apps/website && nuxt prepare",
    "prepare": "husky install",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.3",
    "turbo": "latest"
  },
  "engines": {
    "node": ">16.0.0",
    "npm": ">= 8.0.0"
  }
}